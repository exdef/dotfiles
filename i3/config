set $mode_system System (l) lock, (e) logout, (s) suspend, (Shift+h) hibernate, (Shift+r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id ~/.i3/i3exit lock, mode "default"
	bindsym e exec --no-startup-id ~/.i3/i3exit logout, mode "default"
	bindsym s exec --no-startup-id ~/.i3/i3exit suspend, mode "default"
	bindsym Shift+h exec --no-startup-id ~/.i3/i3exit hibernate, mode "default"
    	bindsym Shift+r exec --no-startup-id ~/.i3/i3exit reboot, mode "default"
    	bindsym Shift+s exec --no-startup-id ~/.i3/i3exit shutdown, mode "default"  

    	# back to normal: Enter or Escape
    	bindsym Escape mode "default"
    	bindsym Mod1+c mode "default"
}
bindsym Mod1+Pause mode "$mode_system"

set $mode_options options: terminals (f1), switch displays (f2)
mode "$mode_options" {
	bindsym F1 exec --no-startup-id ~/.i3/cmdspace.sh, mode "default"
	bindsym F2 exec --no-startup-id ~/.i3/switchdisplay.sh, mode "default"
    	bindsym Escape mode "default"
 	bindsym mod1+c mode "default"
}
bindsym Mod1+Escape mode "$mode_options"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@  +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id "mpc toggle"
bindsym XF86AudioPause xec --no-startup-id "mpc toggle"
bindsym XF86AudioNext exec --no-startup-id "mpc next"
bindsym XF86AudioPrev exec --no-startup-id "mpc prev"


bindsym Mod4+space exec --no-startup-id "mpc toggle"
bindsym Mod4+Right exec --no-startup-id "mpc next"
bindsym Mod4+Left exec --no-startup-id "mpc prev"
	
for_window [window_role="pop-up"] floating enable, move absolute center
for_window [class="Pavucontrol"] floating enable, border normal
#for_window [window_role="conversation"] floating enable
exec --no-startup-id "xrdb .Xresources"
exec --no-startup-id "compton --backend glx --paint-on-overlay --glx-no-stencil --vsync opengl-swc &"
exec --no-startup-id ~/.i3/autostart
